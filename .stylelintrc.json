{
  "ignoreFiles": ["**/*.js", "node_modules/**/*", "build/**/*"],
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-class-pattern": [
      "^(-{0,2}\\.?[a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      {
        "message": "Expected class selector to be kebab-case"
      }
    ],
    "at-rule-no-unknown": null
  }
}
